{
  "name": "echos-copilot-template",
  "version": "1.0.0",
  "description": "Template for integrating Echo Protocol with GitHub Copilot",
  "main": "scripts/build.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:copilot": "node scripts/build.js --copilot",
    "build:instructions": "node scripts/build.js --individual",
    "build:watch": "nodemon scripts/build.js",
    "dev": "npm run build && npm run build:watch",
    "test": "bats tests/bats",
    "test:edge": "bats tests/bats/install-edge-cases.bats",
    "test:installer": "bats tests/bats/install-sh.bats tests/bats/install-local-sh.bats tests/bats/install-ps1.bats",
    "test:integration": "bats tests/bats/install-cross-platform.bats",
    "test:unit": "echo 'No unit tests defined for shell scripts' && exit 0",
    "test:quick": "bats tests/bats/install-sh.bats tests/bats/install-local-sh.bats",
    "test:verbose": "bats --verbose tests/bats",
    "validate:prs": "node scripts/validate-prs-yaml.js"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "echo-protocol",
    "github-copilot",
    "ai-assistant",
    "structured-reasoning"
  ],
  "author": "",
  "license": "MIT"
}
